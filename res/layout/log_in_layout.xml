<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200.0dip"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/log_in_imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/login_logo" />

                <ImageView
                    android:id="@+id/log_in_imageView1_lbn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/login_logo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/log_in_imageView1_fsk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/login_logo"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="88.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/login_edit_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/rl_login_sign_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:paddingLeft="5.0dip" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_user_name_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:paddingLeft="5.0dip" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_user_name_pwd" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_login_devide"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/login_edit_divede" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/rl_login_sign_pwd"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center" >

                        <EditText
                            android:id="@+id/am_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="请输入账号"
                            android:paddingLeft="5.0dip"
                            android:textColor="@color/edittext_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center" >

                        <EditText
                            android:id="@+id/am_pass"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="请输入密码"
                            android:paddingLeft="5.0dip"
                            android:textColor="@color/edittext_color" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="20.0dip" >

                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/am_findpass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15.0dip"
                        android:background="@drawable/btn_register_bg"
                        android:textColor="@color/text_black"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/am_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_register_bg"
                        android:textColor="@color/text_black"
                        android:textSize="16.0sp"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/remember_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/lin"
                    android:gravity="left|center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/am_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_sign_pwd_off_on" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.0dip"
                        android:text="@string/remember_name"
                        android:textColor="@color/text_black"
                        android:textSize="16.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/remember_me"
                    android:layout_toLeftOf="@+id/lin"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:paddingTop="15.0dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/am_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_sign_pwd_off_on" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.0dip"
                        android:text="@string/auto_login"
                        android:textColor="@color/text_black"
                        android:textSize="16.0sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip" >

                <Button
                    android:id="@+id/am_btn_register"
                    android:layout_width="0.0dip"
                    android:layout_height="43.0dip"
                    android:layout_gravity="center"
                    android:layout_marginRight="20.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/btn_common_bg_selector_green"
                    android:text="@string/_register"
                    android:textColor="@color/text_white"
                    android:textSize="20.0sp" />

                <Button
                    android:id="@+id/am_btn_load"
                    android:layout_width="0.0dip"
                    android:layout_height="43.0dip"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@drawable/btn_common_bg_selector_green"
                    android:text="@string/load"
                    android:textColor="@color/text_white"
                    android:textSize="20.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_login_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20.0dip" >

                 <ImageView
                        android:id="@+id/id_under_line"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/about_us_devider_line_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/login_bg"
                        android:gravity="center_horizontal"
                        android:paddingLeft="20.0dip"
                        android:paddingRight="20.0dip"
                        android:text="@string/text_or"
                        android:textColor="@color/text878787"
                        android:textSize="10.0sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center"
                    android:text="@string/login_format"
                    android:textColor="#ff878787"
                    android:textSize="12.0sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="20.0dip"
                    android:layout_marginTop="20.0dip"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/qq_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/qq_login_selector"
                        android:gravity="center"
                        android:paddingLeft="15.0dip"
                        android:text="@string/qq"
                        android:textColor="@drawable/login_text_color_selector"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/weixin_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/weixin_login_selector"
                        android:gravity="center"
                        android:paddingLeft="28.0dip"
                        android:text="@string/wechat"
                        android:textColor="@drawable/login_text_color_selector"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/weibo_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/xinlang_login_selector"
                        android:gravity="center"
                        android:paddingLeft="15.0dip"
                        android:text="@string/sina"
                        android:textColor="@drawable/login_text_color_selector" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/log_in_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:background="@drawable/logo_bo"
        android:contentDescription="@string/image_content_description" />

</LinearLayout>